<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
  <p>This task is completed</p>
<% elsif %>
  <p>This task is not completed yet</p>
<% end %>

<%= link_to("Edit this task", edit_task_path(@task)) %></br>
<%= link_to "Delete this task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Delete #{@task.title}?" } %></br>
<%= link_to("Back to list", tasks_path) %>
